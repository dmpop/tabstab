{
  "manifest_version": 2,
  "name": "Tab Stab",
  "version": "1.0",
  "description": "Automatically closes tabs that have been open for more than a specified number of days, while preserving pinned tabs.",
  "icons": {
    "48": "icons/icon-48.png",
    "96": "icons/icon-96.png"
  },
  "permissions": [
    "tabs",
    "storage",
    "alarms"
  ],
  "background": {
    "scripts": ["background.js"]
  },
  "browser_action": {
    "default_icon": "icons/icon-48.png",
    "default_title": "Tab Stab",
    "default_popup": "popup/popup.html"
  }
}