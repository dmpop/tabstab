{
  "manifest_version": 3,
  "name": "Tab Stab",
  "version": "1.0",
  "browser_specific_settings": {
    "gecko": {
      "id": "tab-stab@yourdomain.com",
      "strict_min_version": "109.0"
    }
  },
  "description": "Automatically closes tabs that have been open for more than a specified number of days, while preserving pinned tabs.",
  "icons": {
    "48": "icons/icon-48.png",
    "96": "icons/icon-96.png"
  },
  "permissions": [
    "tabs",
    "storage",
    "alarms"
  ],
  "background": {
    "scripts": ["background.js"]
  },
  "action": {
    "default_icon": "icons/icon-48.png",
    "default_title": "Tab Stab",
    "default_popup": "popup/popup.html"
  }
}